CREATE TABLE "IJUDY"."EMPLOYEE" (
		"EMPNO" CHAR(6 OCTETS) NOT NULL, 
		"FIRSTNME" VARCHAR(12 OCTETS) NOT NULL, 
		"MIDINIT" CHAR(1 OCTETS), 
		"LASTNAME" VARCHAR(15 OCTETS) NOT NULL, 
		"WORKDEPT" CHAR(3 OCTETS), 
		"PHONENO" CHAR(4 OCTETS), 
		"HIREDATE" DATE, 
		"JOB" CHAR(8 OCTETS), 
		"EDLEVEL" SMALLINT NOT NULL, 
		"SEX" CHAR(1 OCTETS), 
		"BIRTHDATE" DATE, 
		"SALARY" DECIMAL(9 , 2), 
		"BONUS" DECIMAL(9 , 2), 
		"COMM" DECIMAL(9 , 2)
	)
	ORGANIZE BY ROW
	DATA CAPTURE NONE 
	IN "USERSPACE1"
	COMPRESS NO;

CREATE INDEX "IJUDY"."XEMP2"
	ON "IJUDY"."EMPLOYEE"
	("WORKDEPT"		ASC)
	MINPCTUSED 0
	ALLOW REVERSE SCANS
	PAGE SPLIT SYMMETRIC
	COMPRESS NO;

ALTER TABLE "IJUDY"."EMPLOYEE" ADD CONSTRAINT "NUMBER" CHECK (PHONENO >= '0000' AND PHONENO <= '9999');

ALTER TABLE "IJUDY"."EMPLOYEE" ADD CONSTRAINT "PK_EMPLOYEE" PRIMARY KEY	("EMPNO");

